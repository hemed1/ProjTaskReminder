<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="@color/material_blue_grey_900">


    <LinearLayout
        android:id="@+id/layDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/lblSongName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Name "
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lblSongArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"

            android:layout_marginTop="2dp"
            android:text="Artist"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            
            android:layout_marginTop="1dp"
            android:text="Album"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layDetails2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        
        android:paddingStart="10dp"
        android:paddingEnd="5dp">


       <SeekBar
            android:id="@+id/barSeek"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            
            android:layout_marginTop="1dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/lblPosLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="42dp"
            android:text="0.00"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPosNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="340dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:text="3.00"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layDetails3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        
        android:paddingStart="1dp"
        android:paddingEnd="1dp">

        <ImageView
            android:id="@+id/imgLine"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStrat="8dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:background="@android:drawable/ic_media_play"
            android:backgroundTint="@android:color/white"
            android:textSize="9dp" />

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="1dp"
            
            android:layout_marginTop="1dp"
            android:layout_gravity="left|top"
            android:background="@android:drawable/ic_media_previous"
            android:backgroundTint="@android:color/white"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="0dp"
            
            android:layout_marginTop="1dp"
            android:layout_gravity="right"
            android:background="@android:drawable/ic_media_next"
            android:backgroundTint="@android:color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layDetails4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        
        android:layout_marginTop="20dp"
        android:paddingStart="1dp"
        android:paddingEnd="1dp">

        <Button
            android:id="@+id/btnFolders"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="תקיות" />

        <Button
            android:id="@+id/btnList"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="80dp"
            android:text="כל השירים" />

<!--        <MediaController
            android:minWidth="100dp"
            android:minHeight="25dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/mediaControllerMain" />
-->        
    </RelativeLayout>

</LinearLayout>