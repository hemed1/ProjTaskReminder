
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@drawable/gradient1">




    <LinearLayout
        android:id="@+id/layArtist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@android:color/white"
            android:hint="/storage/emulated/0/Music"
            android:id="@+id/txtSettingMusicPath" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:textColor="@android:color/white"
            android:id="@+id/txtSettingNewsUrl" />

        <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:minWidth="25px"
             android:minHeight="25px"
             android:layout_marginTop="30dp"
             android:layout_marginRight="40dp"
             android:textColor="@android:color/white"
             android:id="@+id/txtSettingWeatherUrl" />


        <RelativeLayout
                android:id="@+id/laySettingButtons"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginTop="240dp"
                android:layout_marginBottom="3dp"
                android:paddingStart="1dp"
                android:paddingEnd="1dp">

            <Button
                android:id="@+id/btnSettingSave"
                style="@android:style/Widget.Button"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginEnd="80dp"
                android:layout_marginTop="1dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentEnd="true"
                android:text="שמור" />

            <Button
                android:id="@+id/btnSettingCancel"
                style="@android:style/Widget.Button"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentStart="true"
                android:text="ביטול" />

        </RelativeLayout>        
    </LinearLayout>


</LinearLayout>