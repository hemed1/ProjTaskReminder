
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient1"
    tools:showIn="@layout/activity_main">

   <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        android:id="@+id/layMainButtons">

        <ImageButton
            android:id="@+id/btnMainEmail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"
            android:scaleType="fitXY"
            android:background="@mipmap/mail_read8"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:id="@+id/bntMainMusic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:background="@mipmap/music1"
            android:soundEffectsEnabled="true"/>

        <ImageButton
            android:id="@+id/btnMainWeather"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:background="@mipmap/weather2"
            android:soundEffectsEnabled="true"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layList"
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="23dp">        

        <TextView
            android:id="@+id/lblMainCaption"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:text="@string/list_title"/>

        <ListView  
            android:id="@+id/simpleListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginTop="1dp"
            android:listSelector="@android:color/holo_purple"
            android:divider="@color/material_blue_grey_800"
            android:dividerHeight="0dp"
            android:background="@android:color/transparent"
            android:layout_gravity="bottom"/>
    
        <!--android:background="@color/CardListBackgroundColor" android:color/transparent-->

    </LinearLayout>
    
    <!--android.support.v7.widget.RecyclerView-->

</LinearLayout>