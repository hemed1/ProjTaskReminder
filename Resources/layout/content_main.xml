
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/details_background_main"
    tools:showIn="@layout/activity_main">

    <!--android:background="@drawable/gradient1"-->
   <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        android:id="@+id/layMainButtons">

        <ImageButton
            android:id="@+id/btnMainEmail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"
            android:scaleType="fitXY"
            android:background="@mipmap/mail_read8"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:id="@+id/bntMainMusic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:background="@mipmap/music1"
            android:soundEffectsEnabled="true"/>


        <android.support.v7.widget.CardView
            android:id="@+id/cardWeather"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="50dp">

            <HorizontalScrollView
                android:id="@+id/scrollWeather"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardWeather1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="0dp">

        
                    <LinearLayout
                        android:id="@+id/layoutWeather1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:paddingTop="0dp"
                        android:paddingBottom="2dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">

                        <TextView
                            android:id="@+id/txtWeatherPlace1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            android:text="New-York"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="0dp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/txtWeatherTemperture1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:text="17 C"
                            android:layout_below="@id/txtWeatherPlace1"
                            android:layout_marginTop="0dp"
                            android:textColor="@android:color/holo_blue_dark"/>

                        <TextView
                            android:id="@+id/txtWeatherDescription1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cloudy"
                            android:textSize="17sp"
                            android:textColor="#616060"
                            android:layout_below="@id/txtWeatherTemperture1"
                            android:layout_marginTop="0dp"/>
                        <!--android:textColor="@android:color/black"-->

                        <ImageButton
                            android:id="@+id/btnMainWeather1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:scaleType="fitXY"
                            android:baselineAlignBottom="true"
                            android:background="@mipmap/weather2"
                            android:soundEffectsEnabled="true"/>

                    </LinearLayout>        

                </android.support.v7.widget.CardView>


